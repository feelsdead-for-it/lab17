#include <iostream>
#include <cmath>
using namespace std;
int main()
{
	int n, a, c, P, b, i;
	cin >> n;
	a = 0;
	c = 0;
	P = 0;
	int imax, jmax , kmax = 0;
	int maxP = 0;
	int* x = new int[n];
	int* y = new int[n];
	cout << "\n";
	for (i = 0; i < n; i++)
	{
		cout << i + 1 << "   ";
		cin >> x[i] >> y[i];
	}
	for (i = 0;i < n-2;i++)
	{
		for (int j = i+1 ; j < n-1; j++)
		{
			for (int k = j + 2; k < n; k++)
		{
			a = sqrt(pow((x[i] - x[j]),2) + pow((y[i]-y[j]),2));
			b = sqrt(pow((x[j] - x[k]), 2) + pow((y[j] - y[k]), 2));
			c = sqrt(pow((x[i] - x[k]), 2) + pow((y[i] - y[k]), 2));
			P = a + b + c;
				if (P > maxP)
			{
				maxP = P;
				imax = i;
				jmax = j;
				kmax = k;
				}
			}
			
		}
	}
	cout << ">??>f<" << x[imax] << ";" << y[imax] << ") " << x[jmax] << ";" << y[jmax] << ") " << x[kmax] << ";" << y[kmax] << ") = " << maxP;
